<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>后台管理</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/dist/css/skins/skin-blue.css">
    <!-- js 文件 -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <!-- HTML5 Shim和Respond.js IE8支持HTML5元素和媒体查询 -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
        .content-header {
            height: 40px;
            background-color: pink;
            padding: 0;
            border-bottom: 1px solid #e3e1e1;
        }
        .content-header:before, .content-header:after {
            display: inline-block;
            text-align: center;
            font-size: 16px;
            font-weight: 600;
            opacity: .9;
            width: 50px;
            height: 40px;
            line-height: 40px;
            background-color: #e3e1e1;
        }
        .content-header:before {
            content: '<';
            
        }
        .content-header:after {
            content: '>';
            float:right;
        }
        .content-header div {
            display: inline-block;
            padding: 0 15px;
            line-height: 40px;
            border-right: 1px solid #e3e1e1;
        }
    </style>
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- 图标 -->
            <a href="@Url.Content("~/")" class="logo">
                <div class="logo-mini">
                    <img src="@Url.Content("~/favicon.ico")" alt="logo" style="width:50px; border-radius:15px;padding:8px;"/>
                </div>
                <div class="logo-lg">
                    <img src="@Url.Content("~/favicon.ico")" alt="logo" style="width: 50px; border-radius:15px; padding:8px;"/>
                    后台管理
                </div>
            </a>

            <nav class="navbar navbar-static-top" role="navigation">
                <!-- 边栏切换按钮-->
                <a href="javascrip:void(0);" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>

                <!-- 右菜单 -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown messages-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-envelope-o"></i>
                                <span class="label label-success">1</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="header">您有 1 封邮件</li>
                                <li>
                                    <ul class="menu">
                                        <li>
                                            <a href="javascript:void(0);">
                                                <div class="pull-left">
                                                    <img src="~/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                                                </div>
                                                <h4>
                                                    通知邮件
                                                    <small><i class="fa fa-clock-o"></i> 5 mins</small>
                                                </h4>
                                                <p>您最近还好吗?</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="footer"><a href="javascript:void(0);">查看所有邮件</a></li>
                            </ul>
                        </li>

                        <li class="dropdown notifications-menu">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-bell-o"></i>
                                <span class="label label-warning">10</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="header">您有 10 条提醒</li>
                                <li>
                                    <ul class="menu">
                                        <li>
                                            <a href="javascript:void(0);">
                                                <i class="fa fa-users text-aqua"></i> 5 个新成员入职
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="footer">
                                    <a href="javascript:void(0);">查看所有</a>
                                </li>
                            </ul>
                        </li>

                        <li class="dropdown tasks-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-flag-o"></i>
                                <span class="label label-danger">9</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="header">您有 9 条任务</li>
                                <li>
                                    <ul class="menu">
                                        <li>
                                            <a href="javascript:void(0);">
                                                <h3>
                                                    设计4个模块
                                                    <small class="pull-right">20%</small>
                                                </h3>
                                                <div class="progress xs">
                                                    <div class="progress-bar progress-bar-aqua" style="width: 20%" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
                                                        <span class="sr-only">20% 完成</span>
                                                    </div>
                                                </div>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="footer">
                                    <a href="javascript:void(0);">查看所有任务</a>
                                </li>
                            </ul>
                        </li>

                        <li class="dropdown user user-menu">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="~/dist/img/user2-160x160.jpg" class="user-image" alt="用户图片">
                                <span class="hidden-xs">小明</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="user-header">
                                    <img src="~/dist/img/user2-160x160.jpg" class="img-circle" alt="用户图片">
                                    <p>
                                        小明 - Web 开发工程师
                                        <small>2021 年 11 月入职</small>
                                    </p>
                                </li>
                                <li class="user-body">
                                    <div class="row">
                                        <div class="col-xs-4 text-center">
                                            <a href="javascript:void(0);">按钮</a>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <a href="javascript:void(0);">按钮</a>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <a href="javascript:void(0);">按钮</a>
                                        </div>
                                    </div>
                                </li>
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="javascript:void(0);" class="btn btn-default btn-flat">修改密码</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="@Url.Content("/Login/LoginOut")" class="btn btn-default btn-flat">退出</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        <aside class="main-sidebar">
            <section class="sidebar">
                <ul class="sidebar-menu" data-widget="tree">
                    <li class="treeview">
                        <a href="javascript:void(0);">
                            <i class="fa fa-link"></i> <span>系统管理</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="/Admin/Menu/Index">菜单管理</a></li>
                            <li><a href="/Admin/Role/Index">角色管理</a></li>
                            <li><a href="/Admin/User/Index">用户管理</a></li>
                        </ul>
                    </li>
                </ul>
            </section>
        </aside>
        <div class="content-wrapper">
            <section class="content-header">
                <div>
                    <span style="display:inline-block; width:9px;height:9px;border-radius:4.5px;background-color:#2d8cf0;margin-right:5px;"></span> @ViewData["Title"]
                </div>
            </section>
            <section class="content container-fluid">
                @RenderBody()
            </section>
        </div>
        <footer class="main-footer">
            <strong>Copyright &copy; 2021 <a href="#">Company</a>.</strong> 所有版权.
        </footer>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>